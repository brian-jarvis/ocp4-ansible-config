apiVersion: v1
kind: BuildConfig
metadata:
  name: {{ clog_appname }}
  labels:
    comp-required: "true"
    app: {{ clog_appname }}
spec:
  output:
    to:
      kind: ImageStreamTag
      name: {{ clog_appname }}:latest
  source:
    contextDir: catalog-service
    git:
      ref: {{git_branch }}
      uri: {{ git_repo_uri }}
    type: Git
  strategy:
    sourceStrategy:
      env:
      - name: MAVEN_MIRROR_URL
        value: {{ maven_mirror }}
      forcePull: false
      from:
        kind: ImageStreamTag
        name: jboss-webserver31-tomcat8-openshift:1.0
        namespace: openshift
    type: Source
  resources:
    limits:
      cpu: 500m
      memory: "2Gi"
    requests:
      cpu: "200m"
      memory: "1Gi"